<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/iphoneblack"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tableLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnroot" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
            <Button
                    android:text="@string/square"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnsquare" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
            <Button
                    android:text="@string/power"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/btnpower" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
            <Button
                    android:text="@string/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnclear" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>

        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/ln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnln" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
            <Button
                    android:text="@string/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnpercent" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
            <Button
                    android:text="@string/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnsign" app:backgroundTint="@color/iphonelightgrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
            <Button
                    android:text="@string/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btndivide" app:backgroundTint="@color/iphoneorange"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn7" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn8" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn9" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnmultiply" app:backgroundTint="@color/iphoneorange"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn4" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn5" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn6" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnsubtract" app:backgroundTint="@color/iphoneorange"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn1" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn2" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn3" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnadd" app:backgroundTint="@color/iphoneorange"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="@string/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn0" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:layout_height="wrap_content" android:id="@+id/button" app:backgroundTint="@color/iphoneblack"/>
            <Button
                    android:text="@string/decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btndecimal" app:backgroundTint="@color/iphonegrey"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="30sp"
                    app:autoSizeMaxTextSize="50sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#FFFFFF"/>
            <Button
                    android:text="@string/equals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnequals" app:backgroundTint="@color/iphoneorange"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"                    android:background="@drawable/round"
                    android:textColor="#000000"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="@string/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/screen"
            app:autoSizeTextType="uniform"
            android:textSize="60sp" tools:text="0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout" android:textColor="#FFFFFF"/>
    <TextView
            android:text="@string/current"
            android:layout_width="67dp"
            android:layout_height="33dp" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>